                <script>
                swal({
                    title: "Thất bại",
                    text: "Lưu dữ liệu thất bại.Thử lại hoặc báo với team IT để xử lý lỗi(Báo cáo càng cụ thể càng tốt nhé :D)",
                    icon: "error"
                })
                </script>
            }
        }
        <script>
        $(function () {
            var modal1 = document.getElementById('imageRuleModal');
            $('#image_rule').click(function () {
                modal1.style.display = "block";
            });

            $(window).click(function (event) {
                if (event.target == modal1) {
                    modal1.style.display = "none";
                }
            });
        })
        </script>
